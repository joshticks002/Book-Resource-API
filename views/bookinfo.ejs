<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content">
    <h1>Book</h1>

    <% if (books.length > 0) { %>
      <% books.forEach(book => { %>
        <div class="create-blog content">
            <h3 class="title"><a href="/api/books/<%= book.bookId %>" class="href">Title: <%= book.Title %></a></h3>
            <p class="snippet">Author: <%= book.Author %></p>
            <p class="snippet">Date Published: <%= book.datePublished %></p>
            <p class="snippet">Description: <%= book.Description %></p>
            <p class="snippet">Page Count: <%= book.pageCount %></p>
            <p class="snippet">Genre: <%= book.Genre %></p>
            <p class="snippet">ID: <%= book.bookId %></p>
            <p class="snippet">Publisher: <%= book.Publisher %></p>
            <form action="/api/books/update/<%= book.bookId %>?_method=PUT" method="POST">
                <label for="title">Title:</label>
                <input type="text" id="title" name="Title" required>
                <label for="snippet">Book Author:</label>
                <input type="text" id="snippet" name="Author" required>
                <label for="snippet">Book description:</label>
                <textarea id="body" name="Description" required></textarea>
                <label for="snippet">Pagecount:</label>
                <input type="text" id="snippet" name="pageCount" required>
                <label for="snippet">Book Genre(s):</label>
                <input type="text" id="snippet" name="Genre" required>
                <label for="body">Publisher:</label>
                <input type="text" id="snippet" name="Publisher" required>
                <button type="submit">Edit book info</button>
            </form>
            <form action="/api/books/<%= book.bookId %>?_method=DELETE" method="POST">
                <button type="submit">Delete Book</button>
            </form>
        </div>

      <% }) %>
    <% } else { %>
      <p>There are no books to display...</p>
    <% } %>

    <br/>
    <a href="/api/books" class="href">Go to Home</a>
    <a href="/add-new-book" class="href">Add new book</a>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>